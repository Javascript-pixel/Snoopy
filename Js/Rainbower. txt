var ListMax = ColourList.Count()
var CloseTag = "[/color]"
var Start = 0
var Following = 0
var PerRow = 0
var emptystring
var LastChar
var Character

var stringy = "Hello me am test\n\ning stuff"

func NextShade()
  Following++
  return ColourList[(Start+Following)%ListMax]

func FormatText(text)
  emptystring = ""
  Start++
  Following = 0
  PerRow = 0
  for a = 0..String.Size(text)-1
    Character = string.Sub(text, a, 1)
    emptystring += NextShade() + Character + CloseTag
  return emptystring 